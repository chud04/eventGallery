<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
  <package name="user" namespace="/user" extends="secure">
    <action name="list" class="actions.user.List">
      <result>/user/list.jsp</result>
    </action>
    
    <action name="edit" class="actions.user.Edit">
      <result>/user/edit.jsp</result>
    </action>
    
    <action name="update" class="actions.user.Update">
      <interceptor-ref name="params" />
      <interceptor-ref name="prepare" />
      <interceptor-ref name="basicStack" />
      <result type="redirect">/user/list</result>
      <result name="input">/user/edit.jsp</result>
    </action>
  </package>
</struts>